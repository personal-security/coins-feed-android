<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/touch_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/item_selector"
        android:elevation="5dp"
        android:gravity="center_vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/curr_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/cur_bch" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/curr_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryTextColor"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="BTC" />

            <TextView
                android:id="@+id/curr_full_name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textColor="@color/secondaryTextColor"
                android:ellipsize="end"
                android:lines="1"
                android:scrollHorizontally="true"
                android:textSize="14sp"
                tools:text="Bitcoin" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/curr_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryTextColor"
                android:textSize="20sp"
                tools:text="$" />

            <TextView
                android:id="@+id/curr_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:textColor="@color/primaryTextColor"
                android:textSize="20sp"
                tools:text="5,017" />

            <TextView
                android:id="@+id/curr_percents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/rounded_corners"
                android:textColor="@color/percent_text_color"
                android:textSize="20sp"
                tools:text="5.241%" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>